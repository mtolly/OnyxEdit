  -# drum
  %rect.thick.orange{ width: 20, height: 20, x: 5, y: 2.5, rx: 2, ry: 2, transform: 'translate(0 100)' }
  %rect.thick.red{    width: 20, height: 20, x: 5, y: 2.5, rx: 2, ry: 2, transform: 'translate(30 75)' }
  %rect.thick.yellow{ width: 20, height: 20, x: 5, y: 2.5, rx: 2, ry: 2, transform: 'translate(60 50)' }
  %rect.thick.blue{   width: 20, height: 20, x: 5, y: 2.5, rx: 2, ry: 2, transform: 'translate(90 25)' }
  %rect.thick.green{  width: 20, height: 20, x: 5, y: 2.5, rx: 2, ry: 2, transform: 'translate(120 0)' }

  -# cymbal (crash)
  %circle.thick.yellow{ r: 10, cx: 15, cy: 12.5, transform: 'translate(150 50)' }
  %circle.thick.blue{   r: 10, cx: 15, cy: 12.5, transform: 'translate(180 25)' }
  %circle.thick.green{  r: 10, cx: 15, cy: 12.5, transform: 'translate(210 0)' }

  -# ding (ride, closed hihat)
  %polygon.thick.yellow{ points: '15,2.5 5,12.5 15,22.5 25,12.5', transform: 'translate(240 50)' }
  %polygon.thick.blue{   points: '15,2.5 5,12.5 15,22.5 25,12.5', transform: 'translate(270 25)' }
  %polygon.thick.green{  points: '15,2.5 5,12.5 15,22.5 25,12.5', transform: 'translate(300 0)' }

  -# open hihat
  %polygon.thick.yellow{ points: '15,2.5 5,7.5 10,12.5 5,17.5 15,22.5 25,17.5 20,12.5 25,7.5', transform: 'translate(330 50)' }
  %polygon.thick.blue{   points: '15,2.5 5,7.5 10,12.5 5,17.5 15,22.5 25,17.5 20,12.5 25,7.5', transform: 'translate(360 25)' }
  %polygon.thick.green{  points: '15,2.5 5,7.5 10,12.5 5,17.5 15,22.5 25,17.5 20,12.5 25,7.5', transform: 'translate(390 0)' }

  -# ghost drum
  %rect.thick.orange{ width: 10, height: 10, x: 10, y: 7.5, rx: 2, ry: 2, transform: 'translate(420 100)' }
  %rect.thick.red{    width: 10, height: 10, x: 10, y: 7.5, rx: 2, ry: 2, transform: 'translate(450 75)' }
  %rect.thick.yellow{ width: 10, height: 10, x: 10, y: 7.5, rx: 2, ry: 2, transform: 'translate(480 50)' }
  %rect.thick.blue{   width: 10, height: 10, x: 10, y: 7.5, rx: 2, ry: 2, transform: 'translate(510 25)' }
  %rect.thick.green{  width: 10, height: 10, x: 10, y: 7.5, rx: 2, ry: 2, transform: 'translate(540 0)' }

  -# foot close hihat
  %polygon.thick.yellow{ points: '15,7.5 10,12.5 15,17.5 20,12.5', transform: 'translate(570 100)' }

  -# flam
  %rect.thick.red{    width: 20, height: 45, x: 5, y: 2.5, rx: 2, ry: 2, transform: 'translate(600 50)' }
  %rect.thick.yellow{ width: 20, height: 45, x: 5, y: 2.5, rx: 2, ry: 2, transform: 'translate(630 25)' }
  %rect.thick.blue{   width: 20, height: 45, x: 5, y: 2.5, rx: 2, ry: 2, transform: 'translate(660 25)' }
  %rect.thick.blue{   width: 20, height: 45, x: 5, y: 2.5, rx: 2, ry: 2, transform: 'translate(690 0)' }
  %rect.thick.green{  width: 20, height: 45, x: 5, y: 2.5, rx: 2, ry: 2, transform: 'translate(720 0)' }

  -# ride
  %polygon.thick.yellow{ points: '15,2.5 5,22.5 25,22.5', transform: 'translate(750 50)' }
  %polygon.thick.blue{   points: '15,2.5 5,22.5 25,22.5', transform: 'translate(780 25)' }
  %polygon.thick.green{  points: '15,2.5 5,22.5 25,22.5', transform: 'translate(810 0)' }
