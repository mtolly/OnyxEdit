    %line.guide{ x1: 0, x2: 30 * 28, y1:  37.5, y2:  37.5 }
    %line.guide{ x1: 0, x2: 30 * 28, y1:  62.5, y2:  62.5 }
    %line.guide{ x1: 0, x2: 30 * 28, y1:  87.5, y2:  87.5 }
    %line.guide{ x1: 0, x2: 30 * 28, y1: 112.5, y2: 112.5 }

    %line.guide{ x1: 15, x2: 15, y1: 0, y2: 25 * 5, transform: "translate(#{30 * 0})" }
