%svg{ xmlns: 'http://www.w3.org/2000/svg', version: '1.1', width: 30 * 28, height: 25 * 5 }

  - $width = 30 * 5
  - $height = 30 * 5

  :sass
    .thick
      stroke-width: 2
      stroke: rgb(0,0,0)
      stroke-linejoin: round
    .orange
      fill: rgb(200, 100, 30)
    .red
      fill: rgb(200, 30, 30)
    .yellow
      fill: rgb(170, 170, 30)
    .blue
      fill: rgb(60, 60, 200)
    .green
      fill: rgb(50, 200, 50)
    .guide
      stroke: rgb(255, 0, 255)
      stroke-width: 2

  -#
